<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Label_Style">
        <item name="android:textSize">@dimen/m_label_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/label_text_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">@dimen/m_text_height</item>
    </style>

    <style name="EditText_Style">
        <item name="android:textSize">@dimen/m_edittext_size</item>
        <item name="android:background">@color/edittext_background_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/edittext_text_color</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">@dimen/m_text_height</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textColorHint">@color/edittext_hint_color</item>
    </style>

    <style name="EditText_Style1">
        <item name="android:textSize">@dimen/m_edittext_size</item>
        <item name="android:background">@color/edittext_background_color</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:layout_height">@dimen/m_text_height</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textColorHint">@color/edittext_hint_color</item>
    </style>

    <style name="TextView_Style">
        <item name="android:textSize">@dimen/m_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">@dimen/m_text_height</item>
    </style>

    <style name="TextView_Style1">
        <item name="android:textSize">@dimen/m_label_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">@dimen/m_text_height</item>
    </style>

</resources>
